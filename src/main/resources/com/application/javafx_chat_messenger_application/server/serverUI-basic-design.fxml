<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.application.javafx_chat_messenger_application.server.ServerController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="32.0" prefWidth="600.0">
               <children>
                  <Label text="Witty Messenger">
                     <font>
                        <Font name="Arial Rounded MT Bold" size="23.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <ScrollPane fx:id="sp_main" prefHeight="280.0" prefWidth="600.0">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
               <content>
                  <VBox fx:id="vBoxMessages" prefHeight="278.0" prefWidth="578.0" />
               </content>
            </ScrollPane>
            <HBox alignment="CENTER" prefHeight="49.0" prefWidth="600.0" spacing="20.0">
               <children>
                  <TextField fx:id="tf_message" prefHeight="31.0" prefWidth="508.0" />
                  <Button fx:id="button_send" mnemonicParsing="false" text="Send">
                     <font>
                        <Font name="Arial Rounded MT Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
