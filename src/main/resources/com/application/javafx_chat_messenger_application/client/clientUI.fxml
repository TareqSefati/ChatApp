<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="ap_main" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.application.javafx_chat_messenger_application.client.ClientController2">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="32.0" prefWidth="600.0">
               <children>
                  <Label fx:id="labelClientName" text="Witty Client">
                     <font>
                        <Font name="Arial Rounded MT Bold" size="23.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Label fx:id="labelInfo" />
            <HBox prefHeight="260.0" prefWidth="600.0" spacing="10.0">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin>
               <children>
                  <ScrollPane prefHeight="260.0" prefWidth="392.0">
                     <content>
                        <ListView fx:id="activeClientListView" prefHeight="258.0" prefWidth="184.0" />
                     </content>
                  </ScrollPane>
                  <ScrollPane fx:id="sp_main" prefHeight="280.0" prefWidth="600.0">
                     <content>
                        <VBox fx:id="vBoxMessages" alignment="BOTTOM_CENTER" prefHeight="252.0" prefWidth="390.0" spacing="5.0" />
                     </content>
                  </ScrollPane>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="41.0" prefWidth="600.0" spacing="20.0">
               <children>
                  <TextField fx:id="tf_message" prefHeight="31.0" prefWidth="508.0" />
                  <Button fx:id="button_send" mnemonicParsing="false" onAction="#sendMessage" text="Send">
                     <font>
                        <Font name="Arial Rounded MT Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
